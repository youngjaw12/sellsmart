
<ul class = "flex justify-center gap-12  bg-white drop-shadow-md  pb-4 pt-4 ">
<li>
  <p class="text-2xl font-black"> Sell</p>
  <p class="text-4xl font-black text-button-color"> Smart</p>
</li>

<li class = "mt-4">   
  <%= form_with(url: items_path, method: :get, data: {turbo_frame: "items"}) do |form| %>
     
  <div class=" space-x-3">
  <%= form.text_field :query, placeholder:"search for used item near you!", class: 
  "py-3 px-4 h-10  focus:ring-0 rounded-full 
  bg-white stroke-white border-none hover:drop-shadow-xl drop-shadow-md" %>

  <% end %>
</li>

<li class = "mt-4 pt-1">
  <%= render "darkmode_button/darkmode_toggle" %>
</li>

<li class = "stroke-button-color stroke-2 mt-4 pt-2  ">
  <%= link_to "+ Sell", new_item_path, class:"bg-black text-white font-bold p-1 
    pr-2 pr-4 pl-4 rounded-4xl  border-solid border-2 border-button-color 
    drop-shadow-xl hover:drop-shadow-2xl rounded-md " %>
</li>


<li class = "mt-4">
<%= image_tag ("account.png")%>
</li>

</ul>

